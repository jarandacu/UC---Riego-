#include <Time.h>
#include <TimeAlarms.h>
/*
RST = 5;
DAT = 6;
CLK = 7;

*/


//ZONAS DE RIEGO
/*
A) 3 frutales riego inundación cada 2 días
B) 2 pinos riego cada 2 días 
   1 acer riego cada 2 días
C) 8 chupeas riego diario
   2 nandinas riego diario
D) 2 boj riego diario poca agua*/

//Zona 1 - Riego frutales c/2 días inundación.
const int pin1 = 8; //Pin conectado al arduino
const int tiz1[3]={11,59,05}; //Hora de riego
const int tz1 = 10*1000; //Tiempo de riego
long millisz1=0;
//**int cont1=1;

//Zona 2  - Riego c/2 días.
const int pin2 = 9; //Pin conectado al arduino
const int tiz2[3]={9,30,05}; //Hora de riego
const long tz2 = 300000; //Tiempo de riego
long millisz2=0;
//**int cont2=1;int cont1=1;

//Zona 1 - Riego diario.
const int pin3 = 10; //Pin conectado al arduino
const int tiz3[3]={9,50,05}; //Hora de riego
const int tiz32[3]={19,00,05}; //Hora de riego
const long tz3 = 300000; //Tiempo de riego1;
long millisz3=0;

//Zona 1 - Riego diario poca agua.
const int pin4 = 11; //Pin conectado al arduinogo
const int tiz4[3]={9,10,05}; //Hora de riego
const long tz4 = 300000; //Tiempo de riego
long millisz4=0;

void setup() {  
  pinMode(pin1, OUTPUT);  //definir pin como salida zona1
  pinMode(pin2, OUTPUT);  //definir pin como salida zona2
  pinMode(pin3, OUTPUT);  //definir pin como salida zona3
  pinMode(pin4, OUTPUT);  //definir pin como salida zona4
  
  Serial.begin(9600);
  //Setear el tiempo 
  //setTime(8,29,0,1,1,11); // set time to Saturday 8:29:00am Jan 1 2011
  setTime(15,30,00,17,3,17); 
  
  //ALARMAS
  //Z1
  Alarm.alarmRepeat(tiz1[0],tiz1[1],tiz1[2],z1);
  //Z2
  Alarm.alarmRepeat(tiz2[0],tiz2[1],tiz2[2],z2);
  //Z3
  Alarm.alarmRepeat(tiz3[0],tiz3[1],tiz3[2],z3);
  Alarm.alarmRepeat(tiz32[0],tiz32[1],tiz32[2],z3);
  //Z4
  Alarm.alarmRepeat(tiz4[0],tiz4[1],tiz4[2],z4);
  
  //Crear Alarmas
  //Alarm.alarmRepeat(8,30,0, MorningAlarm);  // 8:30am every day
}

void loop() { 
  // Estado NC
  digitalWrite(pin1,HIGH);
  digitalWrite(pin2,HIGH);
  digitalWrite(pin3,HIGH);
  digitalWrite(pin4,HIGH);
  // Mostrar el Reloj
  digitalClockDisplay();
  Alarm.delay(1000); // wait one second between clock display
  //*Serial.println(cont1);
  //*Serial.println(cont2);
  
}

void digitalClockDisplay()
{
  // digital clock display of the time
  Serial.print(hour());
  printDigits(minute());
  printDigits(second());
  Serial.println(); 
}

void printDigits(int digits)
{
  Serial.print(":");
  if(digits < 10)
    Serial.print('0');
  Serial.print(digits);
}

void z1(){ 
   Serial.println("Riego Zona 1");
   digitalWrite(pin1,LOW);
    millisz1=millis();
    Serial.println(millisz1);
   while (millisz1 < tz1){
      millisz1=millis();
  }
  digitalWrite(pin1,HIGH);
  Serial.println("Término Riego Zona 1");
}

void z2(){ 
   Serial.println("Riego Zona 2");
   digitalWrite(pin2,LOW);
    millisz2=millis();
    Serial.println(millisz2);
    Serial.println(tz2);
   while (millisz2 < tz2){
      millisz2=millis();
  }
  digitalWrite(pin2,HIGH);
  Serial.println("Término Riego Zona 2");
}

void z3(){ 
   Serial.println("Riego Zona 3");
   digitalWrite(pin3,LOW);
    millisz3=millis();
    Serial.println(millisz3);
   while (millisz3 < tz3){
      millisz3=millis();
  }
  digitalWrite(pin3,HIGH);
  Serial.println("Término Riego Zona 3");
}

void z4(){ 
   Serial.println("Riego Zona 4");
   digitalWrite(pin4,LOW);
    millisz4=millis();
    Serial.println(millisz4);
   while (millisz4 < tz4){
      millisz4=millis();
  }
  digitalWrite(pin4,HIGH);
  Serial.println("Término Riego Zona 1");
}

